{
    "compilerOptions": {
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSourceMap": true,
        "newLine": "lf",
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "outDir": "dist",
        "strict": true,
        "target": "esnext",
        "types": [
            "node"
        ]
    },
    "include": ["src/task/*.ts"]
}
